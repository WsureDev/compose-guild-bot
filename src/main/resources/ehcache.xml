<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">

    <!--指定缓存持久化目录-->
    <persistence directory="${java.io.tmpdir}/ehcache-data"/>

    <!-- 1、声明一个名为foo的Cache-->
    <cache alias="jd">
        <!--2、foo的键值对被声明为字符串类型，如果没有指明，默认是Object类型。-->
        <key-type>java.lang.String</key-type>
        <value-type>com.ruiyun.jvppeteer.core.page.Page</value-type>
        <expiry>
            <ttl unit="minutes">3</ttl>
        </expiry>
        <resources>
            <!--3、foo被声明在堆上保存多达2,000个条目。-->
            <heap unit="entries">5</heap>
            <!--4、在它开始被驱逐之前，还有多达500 MB的外堆内存-->
            <!--            <offheap unit="MB">500</offheap>-->
        </resources>
    </cache>

    <cache alias="tool">
        <key-type>java.lang.String</key-type>
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5</heap>
        </resources>
    </cache>

    <cache alias="peep">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.List</value-type>
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>
</config>